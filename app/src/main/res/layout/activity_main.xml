<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <RelativeLayout
       android:padding="@dimen/dp_5"
       android:id="@+id/rl_bg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:background="@drawable/checked_selector"
           android:id="@+id/cb_all"
           android:layout_width="@dimen/dp_40"
           android:layout_height="@dimen/dp_40" />
      <TextView
          android:textColor="@color/result_view"
          android:textSize="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_5"
          android:text="全选"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_toRightOf="@+id/cb_all"
          android:layout_toEndOf="@+id/cb_all" />
   </RelativeLayout>
     <ListView
         android:padding="@dimen/dp_5"
         android:layout_below="@+id/rl_bg"
        android:id="@+id/lv_infor"
         android:layout_width="match_parent"
         android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center"
        android:background="@color/color_textview_backgroud"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@color/clo_itembar"
            android:layout_weight="0.40"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25">
                <ImageView
                    android:src="@mipmap/abc_join"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                   android:textColor="@color/white"
                    android:text="新增"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:background="@color/color_spec"
            android:layout_weight="0.40"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25">
            <ImageView
                android:src="@mipmap/abc_del"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/color_textview_welcome_down"
            android:layout_weight="0.40"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25">
            <ImageView
                android:src="@mipmap/abc_see"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="查看"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
