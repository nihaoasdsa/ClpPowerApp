<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/top_notice_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/normal_headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/headbar_selectadd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#21AC96"
            android:textSize="16sp"
            android:text=""/>

        <ImageView
            android:id="@+id/extras"
            android:padding="12dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/edition5_arrows_open"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/headbar_selectadd_title"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:src="@mipmap/navi_back"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/headbar_line"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/edition5_return"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/iv_return_headbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/headbar_line"
            android:layout_toRightOf="@+id/headbar_line"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/headbar_img_right"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:padding="9dp"
                android:src="@mipmap/edition5_map"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/share"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:textSize="10sp"
                android:textColor="#333"
                android:text="分享"
                android:gravity="end|center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>